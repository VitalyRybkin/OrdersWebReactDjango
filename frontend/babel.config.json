{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": "defaults",
        "bugfixes": true,
        "modules": false
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic",
        "importSource": "@emotion/react",
        "development": false
      }
    ]
  ],
  "plugins": [
    [
      "@babel/plugin-proposal-class-properties",
      { "loose": true }
    ]
  ],
  "env": {
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": { "node": "current" },
            "modules": "commonjs"
          }
        ],
        [
          "@babel/preset-react",
          { "runtime": "automatic" }
        ]
      ]
    }
  }
}